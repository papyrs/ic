{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "types": ["@deckdeckgo/lazy-img", "@deckdeckgo/slide-chart", "node"],
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
